package com.number;

public class Numsplitting {
	static int num=1234;
	static int count=0;
	static int len;
	static int []a=new int[10];
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		while(num>0)
		{
			a[count++]=num%10;
			System.out.println(a);
			num=num/10;
		}
		 len=count;
		
	}

}
